    }

    p a:hover {
        text-decoration: underline;
    }

    hr {
        border: 1px solid #e0e0e0;
        margin-bottom: 20px;
    }

    div {
        background-color: #f9f9f9;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 0 auto;
        max-width: 800px;
