@using Lab1.Models
@using PagedList.Mvc
@model PagedList.PagedList<Lab1.Models.XEGANMAY>
@{
    ViewBag.Title = "MotorbikeManage";
    Layout = "~/Views/Shared/LayOutLoginAdmin.cshtml";
}

<h2 class="text-light">MotorbikeManage</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary animated fadeInUp" })
</p>

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().MaXe)</th>
            <th>@Html.DisplayNameFor(model => model.First().TenXe)</th>
            <th>@Html.DisplayNameFor(model => model.First().Giaban)</th>
            <th>@Html.DisplayNameFor(model => model.First().Mota)</th>
            <th>@Html.DisplayNameFor(model => model.First().Anhbia)</th>
            <th>@Html.DisplayNameFor(model => model.First().Ngaycapnhat)</th>
            <th>@Html.DisplayNameFor(model => model.First().Soluongton)</th>
            <th>@Html.DisplayNameFor(model => model.First().MaLX)</th>
            <th>@Html.DisplayNameFor(model => model.First().MaNPP)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="animated fadeInUp delay-1s">
                <td>@Html.DisplayFor(modelItem => item.MaXe)</td>
                <td>@Html.DisplayFor(modelItem => item.TenXe)</td>
                <td>@Html.DisplayFor(modelItem => item.Giaban)</td>
                <td>@Html.DisplayFor(modelItem => item.Mota)</td>
                <td>
                    <img src="@Url.Content("~/images/" + item.Anhbia)" alt="Image" class="img-thumbnail" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Ngaycapnhat)</td>
                <td>@Html.DisplayFor(modelItem => item.Soluongton)</td>
                <td>@Html.DisplayFor(modelItem => item.MaLX)</td>
                <td>@Html.DisplayFor(modelItem => item.MaNPP)</td>
                <td>
                    @Html.ActionLink("Edit", "Update", new { id = item.MaXe }, new { @class = "btn btn-warning btn-sm animated bounceIn" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaXe }, new { @class = "btn btn-info btn-sm animated bounceIn" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaXe }, new { @class = "btn btn-danger btn-sm animated bounceIn" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-light">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / (@Model.PageCount)
</div>

<div class="pagination-container">
    @Html.PagedListPager(Model, page => Url.Action("MotorbikeManage", new { page = page }))
</div>

<style>
    body {
        background-color: #343a40;
        color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        font-family: 'Arial', sans-serif;
        color: #f8f9fa;
    }

    .table-dark {
        color: #f8f9fa;
        border-radius: 10px;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #495057;
    }

    .table-hover tbody tr:hover {
        background-color: #616e76;
        transform: scale(1.02);
        transition: all 0.3s ease-in-out;
    }

    .btn {
        transition: background-color 0.3s, transform 0.3s;
    }

    .btn:hover {
        transform: scale(1.05);
        background-color: #0056b3;
    }

    .img-thumbnail {
        width: 100px;
        height: auto;
        transition: transform 0.3s ease-in-out;
    }

    .img-thumbnail:hover {
        transform: scale(1.1);
    }

    .pagination-container {
        margin-top: 20px;
    }

    .pagination-container .pagination {
        background-color: #495057;
        border-radius: 10px;
    }

    /* Animation with Animate.css */
    @*@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }*@

    .animated {
        animation-duration: 1s;
        animation-timing-function: ease-in-out;
    }

    .fadeInUp {
        animation-name: fadeInUp;
    }

    .delay-1s {
        animation-delay: 1s;
    }

    .bounceIn {
        animation-name: bounceIn;
    }

    /* Add more specific animations if needed */
</style>
