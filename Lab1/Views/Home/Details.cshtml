@model IEnumerable<Lab1.Models.XEGANMAY>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/View.cshtml";
}

<div class="container">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 90%;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .price {
            color: #d9534f;
            font-weight: bold;
        }

        .highlight {
            background-color: #d9534f;
            color: #fff;
            transition: background-color 0.3s, color 0.3s;
        }

            .highlight:hover {
                background-color: #fff;
                color: #d9534f;
            }
    </style>
    <h2>Thông Tin Xe Máy</h2> <table>
        <thead> <tr> <th>MaXe</th> <th>TenXe</th> <th>Giaban</th> <th>Mota</th> <th>Anhbia</th> <th>Ngaycapnhat</th> <th>Soluongton</th> <th>MaLX</th> <th>MaNPP</th> </tr> </thead>
        <tbody>
            @foreach (var xe in Model)
            {
                <tr class="highlight">
                    <td>@xe.MaXe</td>
                    <td>@xe.TenXe</td>
                    <td class="price">@String.Format("{0:N0} VND", xe.Giaban)</td>
                    <td>@xe.Mota</td>
                    <td><img src="@xe.Anhbia" alt="@xe.TenXe" width="100"></td>
                    <td>@xe.Ngaycapnhat</td>
                    <td>@xe.Soluongton</td>
                    <td>@xe.MaLX</td>
                    <td>@xe.MaNPP</td>
                    <td>
                        <div>
                            <a href="@Url.Action("themGioHang", "GioHang", new {iMaXe =xe.MaXe, @strUrl = Request.Url.ToString()})">Đặt mua</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
